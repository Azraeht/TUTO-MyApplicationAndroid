    package="com.example.mistra.activity" >

    <application
        android:name="com.example.mistra.application.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mistra.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mistra.activity.SecondActivity"
            android:label="@string/title_activity_second" >
        </activity>
        <activity
            android:name="com.example.mistra.activity.MusicActivity"
            android:label="@string/title_activity_music" >
        </activity>
        <activity
            android:name="com.example.mistra.activity.ListViewEleveActivity"
            android:label="@string/title_activity_list_view_eleve" >
        </activity>
        <activity
            android:name="com.example.mistra.activity.TwoPaneActivity"
            android:label="@string/title_activity_two_pane" >
        </activity>
    </application>

</manifest>
